<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pyxCard_card"
    android:layout_width="156dp"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:elevation="8dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="188dp"
        android:orientation="vertical"
        android:padding="16dp">

        <com.gianlu.commonutils.SuperTextView
            android:id="@+id/pyxCard_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:textSize="18sp"
            app:autoSizeMaxTextSize="18sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/pyxCard_star"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="start|bottom"
                android:alpha="0.54"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_star_border_black_48dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.gianlu.commonutils.SuperTextView
                    android:id="@+id/pyxCard_numPick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewEnd" />

                <com.gianlu.commonutils.SuperTextView
                    android:id="@+id/pyxCard_numDraw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewEnd" />

                <TextView
                    android:id="@+id/pyxCard_watermark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewEnd" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>